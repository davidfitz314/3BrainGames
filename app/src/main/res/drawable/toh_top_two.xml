<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="100dp" android:height="100dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item android:bottom="25dp" android:gravity="center_horizontal" android:width="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/tohbrown"/>
            <corners android:topRightRadius="8dp" android:topLeftRadius="8dp"/>
        </shape>
    </item>

    <item android:gravity="bottom" android:width="100dp" android:height="25dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/tohbrown"/>
            <corners android:topRightRadius="8dp" android:topLeftRadius="8dp"/>
        </shape>
    </item>

    <item android:gravity="bottom|center" android:width="60dp" android:height="18dp" android:bottom="25dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/simonYellow"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:gravity="bottom|center" android:width="40dp" android:height="15dp" android:bottom="43dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/simonRed"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>


</layer-list>